{
    "name": "systopia/funding",
    "description": "Manage funding programs from application to payout",
    "type": "civicrm-ext",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "SYSTOPIA",
            "email": "info@systopia.de",
            "homepage": "https://www.systopia.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "prepend-autoloader": false,
        "sort-packages": true,
        "platform": {
        }
    },
    "require": {
        "php": "^8.1",
        "civicrm/civicrm-core": ">=5.81",
        "civicrm/civicrm-packages": ">=5.81",
        "project60/org.project60.banking": "^1.3",
        "psr/simple-cache": "^1 || ^2 || ^3",
        "symfony/html-sanitizer": "^6 || ^7",
        "symfony/http-foundation": " ^5.4 || ^6 || ^7",
        "symfony/http-kernel": " ^5.4 || ^6 || ^7",
        "symfony/property-access": "^5.4 || ^6 || ^7",
        "systopia/activity-entity": "^1.0",
        "systopia/de.systopia.civioffice": "^1.0",
        "systopia/de.systopia.identitytracker": "^1.5",
        "systopia/de.systopia.xcm": "^1.15",
        "systopia/external-file": "^1.0",
        "tomsgu/pdf-merger": "^0.5",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "colinodell/psr-testlogger": "^1"
    },
    "autoload": {
        "classmap": ["ComposerHelper.php"]
    },
    "autoload-dev": {
        "psr-4": { "Civi\\": "tests/phpunit/Civi/" }
    },
    "scripts": {
        "pre-update-cmd": [
            "Funding\\ComposerHelper::preUpdate"
        ],
        "composer-phpcs": [
            "@composer --working-dir=tools/phpcs"
        ],
        "composer-phpstan": [
            "@composer --working-dir=tools/phpstan"
        ],
        "composer-phpunit": [
            "@composer --working-dir=tools/phpunit"
        ],
        "composer-tools": [
            "@composer-phpcs",
            "@composer-phpstan",
            "@composer-phpunit"
        ],
        "phpcs": [
            "@php tools/phpcs/vendor/bin/phpcs"
        ],
        "phpcbf": [
            "@php tools/phpcs/vendor/bin/phpcbf"
        ],
        "phpstan": [
            "@php tools/phpstan/vendor/bin/phpstan -v"
        ],
        "phpunit": [
            "@php tools/phpunit/vendor/bin/simple-phpunit --coverage-text"
        ],
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.28.x-dev"
        }
    },
    "conflict": {
        "pear/mail_mime": "<1.10.2",
        "systopia/opis-json-schema-ext": "<0.6.4"
    }
}
