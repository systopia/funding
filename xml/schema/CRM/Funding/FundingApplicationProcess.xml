<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>ApplicationProcess</class>
  <name>civicrm_funding_application_process</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingApplicationProcess ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>funding_case_id</name>
    <type>int unsigned</type>
    <comment>FK to FundingCase</comment>
  </field>
  <foreignKey>
    <name>funding_case_id</name>
    <table>civicrm_funding_case</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>status</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <pseudoconstant>
      <callback>Civi\Funding\FundingPseudoConstants::getApplicationProcessStatus</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>creation_date</name>
    <type>timestamp</type>
    <required>true</required>
  </field>

  <field>
    <name>modification_date</name>
    <type>timestamp</type>
    <required>true</required>
  </field>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>index_title</name>
    <fieldName>title</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>short_description</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>start_date</name>
    <type>timestamp</type>
    <required>false</required>
  </field>

  <field>
    <name>end_date</name>
    <type>timestamp</type>
    <required>false</required>
  </field>

  <field>
    <name>request_data</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>amount_requested</name>
    <type>decimal(10,2)</type>
    <required>true</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>amount_granted</name>
    <type>decimal(10,2)</type>
    <required>false</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>granted_budget</name>
    <type>decimal(10,2)</type>
    <required>false</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>is_review_content</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>is_review_calculative</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
</table>
